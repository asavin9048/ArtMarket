<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="55dp"
    android:orientation="vertical"
    android:scrollbars="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Продажа картин"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/textViewRazmer"
                android:layout_width="123dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Размер"
                android:textColor="@color/cardview_dark_background" />

            <TextView
                android:id="@+id/textViewMaterial"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Материал"
                android:textColor="@color/cardview_dark_background" />

            <TextView
                android:id="@+id/textViewPrice"
                android:layout_width="121dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Цена"
                android:textColor="@color/cardview_dark_background" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Spinner
                android:id="@+id/spinnerArtSize"
                android:layout_width="123dp"
                android:layout_height="25dp" />

            <Spinner
                android:id="@+id/spinner3"
                android:layout_width="123dp"
                android:layout_height="wrap_content" />

            <Spinner
                android:id="@+id/spinner2"
                android:layout_width="123dp"
                android:layout_height="wrap_content" />

        </TableRow>

    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/art1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgArt1"
                        android:layout_width="180dp"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/art_pines"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:id="@+id/size1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgArt1"
                        android:gravity="left"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="60х80 см."
                        android:textColor="#222"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/price1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/imgArt1"
                        android:layout_alignRight="@+id/imgArt1"
                        android:layout_below="@+id/imgArt1"
                        android:layout_toRightOf="@+id/size1"
                        android:gravity="right"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="3200 грн"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/art2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgArt2"
                        android:layout_width="180dp"
                        android:layout_height="120dp"
                        android:layout_alignParentTop="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/art_lights" />

                    <TextView
                        android:id="@+id/size2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgArt2"
                        android:gravity="left"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="30х40 см."
                        android:textColor="#222"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/price2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/imgArt2"
                        android:layout_alignRight="@+id/imgArt2"
                        android:layout_below="@+id/imgArt2"
                        android:layout_toRightOf="@+id/size2"
                        android:gravity="right"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="2800 грн."
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <android.support.v7.widget.CardView
                android:id="@+id/art3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgArt3"
                        android:layout_width="180dp"
                        android:layout_height="120dp"
                        android:layout_alignParentTop="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/art_grapes" />

                    <TextView
                        android:id="@+id/size3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgArt3"
                        android:gravity="left"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="30х40 см."
                        android:textColor="#222"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/price3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/imgArt3"
                        android:layout_alignRight="@+id/imgArt3"
                        android:layout_below="@+id/imgArt3"
                        android:layout_toRightOf="@+id/size3"
                        android:gravity="right"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="700 грн."
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/art4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgArt4"
                        android:layout_width="180dp"
                        android:layout_height="120dp"
                        android:layout_alignParentTop="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/art_wood_bridge" />

                    <TextView
                        android:id="@+id/size4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgArt4"
                        android:gravity="left"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="30х40 см."
                        android:textColor="#222"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/price4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/imgArt4"
                        android:layout_alignRight="@+id/imgArt4"
                        android:layout_below="@+id/imgArt4"
                        android:layout_toRightOf="@+id/size4"
                        android:gravity="right"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="2500 грн"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <android.support.v7.widget.CardView
                android:id="@+id/art5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgArt5"
                        android:layout_width="180dp"
                        android:layout_height="120dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/art_peonies" />

                    <TextView
                        android:id="@+id/size5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgArt5"
                        android:gravity="left"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="30х40 см."
                        android:textColor="#222"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/imgArt5"
                        android:layout_alignRight="@+id/imgArt5"
                        android:layout_below="@+id/imgArt5"
                        android:layout_toRightOf="@+id/size5"
                        android:gravity="right"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="700 грн."
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/art6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardElevation="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imgArt6"
                        android:layout_width="180dp"
                        android:layout_height="120dp"
                        android:layout_alignParentTop="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/art_wood_bridge" />

                    <TextView
                        android:id="@+id/size6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/imgArt6"
                        android:gravity="left"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="30х40 см."
                        android:textColor="#222"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignEnd="@+id/imgArt6"
                        android:layout_alignRight="@+id/imgArt6"
                        android:layout_below="@+id/imgArt6"
                        android:layout_toRightOf="@+id/size6"
                        android:gravity="right"
                        android:maxLines="3"
                        android:padding="8dp"
                        android:text="2500 грн"
                        android:textColor="@android:color/holo_red_dark"
                        android:textSize="14dp"
                        android:textStyle="bold" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </TableRow>


    </TableLayout>

</LinearLayout>