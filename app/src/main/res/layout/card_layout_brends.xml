<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_child"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/textView10"
    android:layout_marginTop="10dp"
    android:clickable="true"
    android:foreground="?selectableItemBackground"
    card_view:cardBackgroundColor="#f3fffff4"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="3dp"
    card_view:contentPadding="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@android:color/transparent"
        android:padding="0dp">

        <ImageView
            android:id="@+id/item_image_child"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/item_title_child"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/item_image_child"
            android:layout_toRightOf="@+id/item_image_child"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
